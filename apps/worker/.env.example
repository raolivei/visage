# Visage Worker Environment Variables
# Copy to .env and customize for your environment

# Worker identity
WORKER_ID=visage-worker-mac

# API connection (ElderTree or local)
API_URL=http://localhost:8004

# Redis (ElderTree or local)
REDIS_URL=redis://localhost:6383

# MinIO / S3 (ElderTree or local)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=visage
MINIO_SECURE=false

# Device: auto, mps, cuda, cpu
DEVICE=auto

# Model configuration
MODEL_ID=stabilityai/stable-diffusion-xl-base-1.0
VAE_ID=madebyollin/sdxl-vae-fp16-fix

# LoRA training
LORA_RANK=32
LORA_ALPHA=32
LORA_LR=0.0001
LORA_TRAIN_STEPS=1000
LORA_BATCH_SIZE=1

# Generation
NUM_INFERENCE_STEPS=30
GUIDANCE_SCALE=7.5
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024

# Quality thresholds
MIN_FACE_SIMILARITY=0.7
MIN_QUALITY_SCORE=0.6
MAX_ARTIFACT_SCORE=0.3

# Polling interval (seconds)
POLL_INTERVAL=5.0
