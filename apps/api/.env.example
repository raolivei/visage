# Visage API Environment Variables
# Copy to .env and customize for your environment

# Database
DATABASE_URL=postgresql+asyncpg://visage:visage@localhost:5436/visage

# Redis
REDIS_URL=redis://localhost:6383

# MinIO / S3
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=visage
MINIO_SECURE=false

# Application
DEBUG=true
CORS_ORIGINS=["http://localhost:3004"]

# File upload limits
MAX_UPLOAD_SIZE_MB=20
MIN_PHOTOS_PER_PACK=8
MAX_PHOTOS_PER_PACK=20
